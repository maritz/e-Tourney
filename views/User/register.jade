form( method: 'post' )
  fieldset
    legend Create your new account
    - if (errors !== 'none')
      ul
        li But first you have to fix a few problems:
        - each error, field in errors
          - if (error.length > 0)
            li= field + ' ' + error
    ul
      li
        label( for: 'reg_name' ) Name
        input#reg_name( type: 'text', name: 'name', value: values.name, class: errors.name && errors.name.length > 0 ? 'error' : '' )
      li
        label( for: 'reg_email' ) E-Mail
        input#reg_email( type: 'text', name: 'email', value: values.email )
      li
        label( for: 'reg_pwd' ) Password
        input#reg_pwd( type: 'password', name: 'password', value: '' )
      li
        label( for: 'reg_pwd2' ) Repeat password
        input#reg_pwd( type: 'password', name: 'password_repeat', value: '' )
      li
        input( type: 'submit', name: 'register', value: 'Register')