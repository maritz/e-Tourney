!!! 5
html
  head
    meta( charset: 'utf-8' )
    title e-Tourney
    script( src: '/js/jquery-1.4.2.js' )
    script( src: '/js/app.js' )
    link( rel: 'stylesheet', href: '/css/default/style.css' )
  body
    #main_container
      header
        #top_bar
          span#top_bar_lang Ger Eng
          span#top_bar_time 2010-03-20 13:45:10 UTC
          span#top_bar_logged Suche
            a( href: '?' ) Logout
        #header_logo
          h1 e
            span.tourney tourney
        - if (session.logged_in === undefined)
          #header_login
            form( method: 'GET', action: currentUrl )
              input( type: 'hidden', name: 'login', value: 1 )
              label( for: 'login_name' ) Name
              input#login_name( type: 'text' )
              label( for: 'login_pwd' ) Password
              input#login_pwd( type: 'password' )
              input( type: 'submit', value: 'Login' )
              input( type: 'button', value: 'Register' )
        - if (session.logged_in !== undefined)
          #header_userbox
            #userbox_avatar ?
            a#userbox_profile
              span euml
            a#userbox_user
              img( src: 'arrow.png', alt: '>' )
              span Benutzer
            a#userbox_team
              img( src: 'arrow.png', alt: '>' )
              span Teams
      nav
        ul
          li
            a.first( href: "/" ) News
          li
            a.second( href: "/tourn" ) Turniere
      - if (typeof(show_quicklist) !== 'undefined')
        table#quicklist
          thead
            tr
              th( colspan:"5" )= table.name + " Turniere"
          tbody
            - each tourn in table.tourns
              tr
                td
                  img( src: "icon.png" )
                td= "0000.00.00 00:00"
                td= tourn
                td= "Teilnehmer: 5/16"
                td= "Status: kackdreck"
      #body.clear
        #content= body
        aside.sponsors
          span Sponsors
          ul
            li Ferrari
            li Intel
            li NASA
      footer Footer